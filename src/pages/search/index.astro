---
export const prerender = true; // ✅ ensure /search is static (no cold start)

import Site from "../../layouts/Site.astro";
// You don't actually use RealtyVis.astro directly here, so you can remove the import if unused.
// import RealtyVis from "../../components/RealtyVis.astro";

const hero = "/img/hero/search_hero.webp";
const pageTitle = "Search Listings";
const pageSummary =
  "Find Fernie homes, condos, townhomes, and investment properties. Filter by price, beds, and more.";

const seo_title = "Search Fernie Real Estate Listings";
const seo_description =
  "Live Fernie MLS® search: homes, condos, townhomes, investment properties. Filter and explore neighborhoods with up-to-date listings.";
---

<Site title={pageTitle} seo_title={seo_title} seo_description={seo_description}>
  <Fragment slot="head">
    <link rel="preload" as="image" href={hero} fetchpriority="high" />
  </Fragment>

  <div class="container search-wrapper">
    <div class="search-card">
      <div id="rv-block" data-rv-block="MQP2VMLT-HDQLLMRY"></div>
    </div>
  </div>

  <!-- Optional: simple timer to see how long RV takes to mount -->
  <script is:inline>
    (function(){
      console.time("rv:ready");
      var t = setInterval(function(){
        var mounted = document.querySelector('[data-rv-card], .rv-card, [data-rv-root]');
        if (mounted) { clearInterval(t); console.timeEnd("rv:ready"); }
      }, 100);
      setTimeout(function(){ clearInterval(t); }, 15000);
    })();
  </script>

  <style>
    .search-wrapper {
      margin-top: 90px;
      margin-bottom: 24px;
    }
    .search-card {
      background: #fff;
      border: 1px solid #e5e7eb;
      border-radius: 16px;
      padding: 24px 20px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    }

    .intro {
      margin: 24px auto 20px;
    }
    .intro h1 {
      font-size: 2.25rem;
      font-weight: 700;
      margin: 0 0 8px;
      color: #111827;
    }
    .intro p {
      font-size: 1rem;
      line-height: 1.6;
      color: #1f2937;
    }

    .search-placeholder {
      display: grid;
      place-items: center;
      height: 280px;
      border: 1px dashed #d1d5db;
      border-radius: 12px;
      color: #6b7280;
      background-image: repeating-linear-gradient(
        -45deg,
        #fafafa,
        #fafafa 10px,
        #f5f5f5 10px,
        #f5f5f5 20px
      );
    }
  </style>
</Site>
