---
import { onMount } from 'astro/client';
import RealtyVis from './RealtyVis.astro';

const { blockId, scriptUrl, embedUrl, minHeight = "900px" } = Astro.props;
let show = false;

onMount(() => {
  // when component becomes visible, flag to show real embed
  show = true;
});
---

{show ? (
  <RealtyVis blockId={blockId} scriptUrl={scriptUrl} embedUrl={embedUrl} minHeight={minHeight} />
) : (
  <div style={`min-height:${minHeight};background:#f6f6f6`} />
)}
