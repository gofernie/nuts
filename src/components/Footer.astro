---
// src/components/Footer.astro
const year = new Date().getFullYear();
---

<footer class="w-full border-t border-gray-200 bg-gray-50/80 backdrop-blur-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    
    <!-- Left side: Brand / Copyright -->
    <div class="text-sm text-gray-600">
      © {year} Chris Crump · Fernie Real Estate
    </div>

    <!-- Center: Links -->
    <nav class="flex flex-wrap justify-center gap-6 text-sm text-gray-700">
      <a href="/about" class="hover:text-blue-600 transition-colors">About</a>
      <a href="/neighbourhoods" class="hover:text-blue-600 transition-colors">Neighbourhoods</a>
      <a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a>
      <a href="/contact" class="hover:text-blue-600 transition-colors">Contact</a>
    </nav>

    <!-- Right side: Social icons -->
    <div class="flex justify-center sm:justify-end gap-4">
      <a href="https://www.instagram.com/" aria-label="Instagram" class="hover:text-blue-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7 2C4.2 2 2 4.2 2 7v10c0 2.8 2.2 5 5 5h10c2.8 0 5-2.2 5-5V7c0-2.8-2.2-5-5-5H7zm10 2c1.7 0 3 1.3 3 3v10c0 1.7-1.3 3-3 3H7c-1.7 0-3-1.3-3-3V7c0-1.7 1.3-3 3-3h10zm-5 3a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm4.5-.8a1 1 0 100 2 1 1 0 000-2z"/>
        </svg>
      </a>
      <a href="https://www.facebook.com/" aria-label="Facebook" class="hover:text-blue-600 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M13 3h4a1 1 0 011 1v4h-2.5a1 1 0 00-1 1V12h3l-.5 4h-2.5v7h-4v-7H8v-4h3V9a4 4 0 014-4z"/>
        </svg>
      </a>
    </div>
  </div>
</footer>
