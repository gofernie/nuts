---
const {
  title = "Fernie Real Estate",
  showHeader = true,
  class: bodyClass = "",
} = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      :root {
        --header-h: 52px;
        --bg: #fafaf9;            /* Tailwind stone-50 */
        --ink: #111827;           /* neutral-900 */
        --ink-muted: #1f2937;     /* ✅ darker gray-800 for nav links */
        --hover-bg: rgba(243,244,246,.9); /* gray-100 */
        --focus-ring: rgba(37,99,235,.35);
      }

      html, body { height: 100%; }
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        background: var(--bg);
        color: var(--ink);
      }

      header {
        position: fixed;
        top: 0; left: 0; right: 0;
        height: var(--header-h);
        z-index: 100;
        background: rgba(255,255,255,0.84); /* ✅ slightly more see-through */
        backdrop-filter: blur(10px);
        border-bottom: 1px solid #e5e7eb;
        transition: background .3s ease;
      }

      .nav-inner {
        max-width: 1200px;
        margin: 0 auto;
        height: 100%;
        padding: 0 12px;
        display: flex;
        align-items: center;
      }

      .brand {
        font-weight: 700;
        font-size: 1rem;
        text-decoration: none;
        color: var(--ink);
        padding: 4px 6px;
        border-radius: 6px;
        transition: background .25s ease, color .25s ease;
      }
      .brand:hover { background: var(--hover-bg); }

      .spacer { flex: 1; }

      nav {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      nav a {
        display: inline-block;
        color: var(--ink-muted); /* ✅ darker than before */
        padding: 4px 6px;
        text-decoration: none;
        border-radius: 6px;
        transition: color .25s ease, background .25s ease;
        outline: none;
      }

      nav a:hover,
      nav a:focus-visible {
        color: var(--ink);
        background: var(--hover-bg);
      }

      nav a:focus-visible {
        box-shadow: 0 0 0 3px var(--focus-ring);
      }

      @media (prefers-reduced-motion: reduce) {
        * { transition: none !important; }
      }

      main { margin: 0; padding: 0; }
    </style>
  </head>
  <body class={bodyClass}>
    {showHeader && (
      <header>
        <div class="nav-inner">
          <a class="brand" href="/">Fernie Real Estate</a>
          <span class="spacer"></span>
          <nav>
            <a href="/neighbourhoods">Neighbourhoods</a>
            <a href="/types">Types</a>
            <a href="/contact">Contact</a>
          </nav>
        </div>
      </header>
    )}
    <main>
      <slot />
    </main>
  </body>
</html>
