---
const { title = "Fernie Real Estate" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      :root { color-scheme: light dark }
      body { margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif }
      header { position:sticky; top:0; background:#fff; border-bottom:1px solid #eee; padding:12px 20px }
      .container { max-width:1100px; margin:0 auto; padding:24px }
      .hero { display:grid; place-items:center; min-height:42vh; background:linear-gradient(120deg,#f0f4ff,#ffeef6); border-radius:16px }
    </style>
  </head>
  <body>
    <header><strong>Fernie Real Estate</strong></header>
    <main class="container">
      <slot />
    </main>
  </body>
</html>
